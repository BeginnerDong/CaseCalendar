page{
	min-height:100%;
	width:100%;
	background:#f4f4f4;
}
.notice{
	width:100%;

}
.notice_title{
	width:100%;
	height:76rpx;
	line-height:76rpx;
}
.notice_title text{
	margin-right:16rpx;
}
.notice_cont{
	color:#685958;
	line-height:36rpx;
}
.notice_time{
	height:60rpx;
	line-height:60rpx;
}
.notice_time .text1{
	width:25%;
}
.meeting_info{
	height:88rpx;
	border-bottom:solid 1px #eee;
}
.case_left,.case_right{
	width:50%;
}
.case_left .input_before{
	width:35%;
	font-size:28rpx;
	color:#666;
}
.case_left .case_input{
	width:55%;
	font-size:28rpx;
	color:#222;
}
.case_left input{
	width:100%;
	font-size:28rpx;
	color:#222;
}
.case_right .input_before{
	width:45%;
	font-size:28rpx;
	color:#666;
}
.case_right .case_input{
	width:55%;
	font-size:28rpx;
	color:#222;
}
.case_right .case_input input{
	width:100%;
}
.case_left text{
	margin-right:58rpx;
}
.case_right{
	width:50%;
}
.case_list{
	padding-bottom:30rpx;
	margin-bottom:30rpx;
}
.case_row{
	width:100%;
	padding-top:20rpx;
	padding-bottom:20rpx;
}
.case_row .input_before{
	width:22%;
	font-size:28rpx;
	color:#666;
}
.border_b{
	border-bottom: solid 1px #eee;
}
.textarea{
	width:74%;
	padding:10rpx 2%;
	font-size:26rpx;
	height:100rpx;
	border-radius:10rpx;
	background:#fbfbfb;
}
.textarea textarea{
	width:100%;
	height:100%;
	overflow:scroll;
	font-size:26rpx;
}
.user_tilte1{
	width:70rpx;
}
.case_row_input{
	width:100%;
}
.case_row_input .input_before{
	width:22%;
	font-size:28rpx;
	color:#666;
}
.case_row_input .input{
	width:58%;
	height:100%;
	border:solid 1px #999;
	border-radius:10rpx;
}
.case_row_input .input1{
	width:35%;
	border:solid 1px #999;
	margin-right:2%;
	border-radius:10rpx;
	height:50rpx;
}
.case_row_input input{
	width:78%;

}
.case_row_input image{
	width:24rpx;
	height:24rpx;
}
.share{
	width:60rpx;
	height:60rpx;
	position:fixed;
	right:0;
	bottom:30%;
}
.share image{
	width:100%;
	height:100%;
}
.share button{
	width:60rpx;
	height:60rpx;
	padding:0;
}
.submit_info{
	border-radius:0;
	width:100%;
}
.button-hover{
	background:#3e9dff;
}
picker{
	width:94%;
	height:100%;
	padding:0 3%;
}
.picker_in{
	width:100%;
}
.picker{
	width:90%;
	height:48rpx;
	line-height:48rpx;
	color:#666;
	font-size:26rpx;
	text-align:center;
	float:left;
}
.down{
	width:10%;
}
.down image{
	width:16rpx;
	height:14rpx;
}
checkbox{
	width:30rpx;
	height:30rpx;
	margin:20rpx;
}
label{
	width:33.33%;
}
.select_item{
	margin-left:20rpx;
	font-size:26rpx;
}