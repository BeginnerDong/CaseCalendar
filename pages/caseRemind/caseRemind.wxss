/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	background:#fff;
}
.empty{
	width:100%;
	height:100vh;
	line-height:100%;
	overflow:hidden;
}
.empty_cont{
	position:absolute;
	left:0;
	top:30%;
	width:100%;
	text-align:center;
}
.empty_cont image{
	width:330rpx;
	height:260rpx;
	margin:0 auto;
}
.user_img{
	width:100rpx;
	height:100rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0px auto;
}
.remind{
	width:100%;
	height:150rpx;
	border-bottom:solid 1px #eee;
}
.remind_cont{
	width:100%;
	height:100rpx;
}
.remind_left{
	width:18%;
}
.remind_right{
	width:82%;
}
.remind_top{
	margin-bottom:20rpx;
}