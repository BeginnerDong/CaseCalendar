/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#f4f4f4;
}
.calender_tit{
	margin-top:140rpx;
	margin-bottom:30rpx;
}
.calender_year{
	width:100%;
	height:124rpx;
	line-height:124rpx;
	text-align:center;
}
.calender_week{
	padding-bottom:30rpx;
	border-bottom:solid 1px #eee;
}
.week{
	width:14.28%;
	text-align:center;
}
.calender_day{
	flex-wrap:wrap;
}
.day{
	width:14.28%;
	text-align:center;
	height:94rpx;
}
.solar{
	font-size:26rpx;
	width:100%;
	text-align:center;
}
.lunar{
	font-size:20rpx;
	width:100%;
	text-align:center;
}
.day_cont{
	height:58rpx;
	width:100%;
}
.calender_day{
	padding:30rpx 2.6%;
	height:470rpx;
	overflow: hidden;
}
.day{
	float:left;
}
.calendar-root{
    font-family: simhei;
    font-size: 34rpx;
    color: #353535;
    background: #f1f1f1;
}

.calendar-navbar{
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    height: 90rpx;
}
.calendar-navbar-button{
    flex-grow: 1;
    width: 100rpx;
    height: 70rpx;
    line-height:70rpx;
    text-align: center;
    font-size: 30rpx;
}
.calendar-navbar-date{
    flex-grow: 1;
    width: 150rpx;
    height: 70rpx;
    line-height:70rpx;
    text-align: center;
    font-size: 30rpx;
}

.calendar-head{
    border-top: solid 0.5rpx #f1f1f1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    background: #fff;
}
.calendar-head view{
    text-align: center;
    flex:1;
}

.calendar-body{
    margin-top: 10rpx;
    background: #fff;
    padding:30rpx 4%;
}
.calendar-body-rows{
    display: flex;
    align-items: center;
    height: 98rpx;
    padding: 0 4rpx 8rpx;
}
.calendar-body-cols{
    display: flex;
    flex: 1;
    align-items: center;
    height: 100%;
    padding: 0 4rpx;
}
.calendar-body-item{
    position:relative;
    background: #fff;
    width: 100%;
    height: 100%;
}
.calendar-body-day{
    position: absolute;
    left: 10rpx;
    top: 10rpx;
    text-align: center;
}
.calendar-body-dayex{
    position: absolute;
    left: 10rpx;
    top: 60rpx;
    text-align: center;
    font-size: 25rpx;
}
.calendar-body-workturn{
    text-align: center;
    font-size: 25rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

.calendar-detail{
    background: #fff;
    height: 135rpx;
}
.calendar-detail-day{
    position: absolute;
    margin-left: 80rpx;
    font-size: 108rpx;
    font-weight: bold;
    color: #e64340;
}
.calendar-detail-info1{
    position: absolute;
    margin-top: 30rpx;
    margin-left: 230rpx;
    font-size: 30rpx;
    font-weight: bold;
}
.calendar-detail-info2{
    position: absolute;
    margin-top: 80rpx;
    margin-left: 230rpx;
    font-size: 28rpx;
}

.calendar-workturn{
    margin-top: 10rpx;
    height: 140rpx;
    text-align: center;
}
.calendar-workturn-date-picker{
    position:relative;
    background:#fff;
    height:60rpx;
}
.calendar-workturn-type-picker{
    position:relative;
    top:10rpx;
    background:#fff;
    height:60rpx;
}

.view-hover{
    background:#eee;
}
