/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#f4f4f4;
}
.calender_tit{
	margin-top:140rpx;
	margin-bottom:30rpx;
}
.calender_year{
	width:100%;
	height:124rpx;
	line-height:124rpx;
	text-align:center;
}
.calender_week{
	padding-bottom:30rpx;
	border-bottom:solid 1px #eee;
}
.week{
	width:14.28%;
	text-align:center;
}
.calender_day{
	flex-wrap:wrap;
}
.day{
	width:14.28%;
	text-align:center;
	height:94rpx;
}
.solar{
	font-size:26rpx;
	width:100%;
	text-align:center;
}
.lunar{
	font-size:20rpx;
	width:100%;
	text-align:center;
}
.day_cont{
	height:58rpx;
	width:100%;
}
.calender_day{
	padding:30rpx 2.6%;
	height:470rpx;
	overflow: hidden;
}
.day{
	float:left;
}