/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#f4f4f4;
}
.empty{
	width:100%;
	height:100vh;
	line-height:100%;
	overflow:hidden;
}
.empty_cont{
	position:absolute;
	left:0;
	top:30%;
	width:100%;
	text-align:center;
}
.empty_cont image{
	width:330rpx;
	height:260rpx;
	margin:0 auto;
}
.add{
	width:200rpx;
	height:60rpx;
	text-align: center;
	line-height:60rpx;
	font-size:30rpx;
	border-radius:0;
	margin:50rpx auto 0 auto;
	background:#3e9dff;
	color:#fff;
}
.case_box{
	padding-top:30rpx;
	padding-bottom:30rpx;
}
.case_list{
	height:60rpx;
}
.case_left{
	width:30%;
	font-size:28rpx;
	color:#666;
}
.case_right{
	width:70%;
	font-size:28rpx;
	color:#222;
}
.case_box{
	margin-top:30rpx;
}
.submit_info{
	border-radius:0;
	position:fixed;
	bottom:0;
	left:0;
	width:100%;
	height:88rpx;
	line-height:88rpx;
	text-align: center;
}